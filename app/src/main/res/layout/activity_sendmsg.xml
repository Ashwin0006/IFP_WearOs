<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8FFD3">

    <Button
        android:id="@+id/send_msg"
        android:layout_width="71dp"
        android:layout_height="29dp"
        android:layout_marginStart="78dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_blue_rect"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/email_rec"
        android:layout_width="125dp"
        android:layout_height="31dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edt_txt"
        android:hint="Enter Email"
        android:paddingLeft="3dp"
        android:text="Enter Email"
        android:textColor="#474444"
        android:textColorHint="@color/_0000000"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/msg_rec"
        android:layout_width="128dp"
        android:layout_height="73dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/edt_txt"
        android:hint="Enter Message"
        android:paddingLeft="3dp"
        android:text="Enter Message..."
        android:textColor="#474444"
        android:textColorHint="#323030"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_rec" />
</androidx.constraintlayout.widget.ConstraintLayout>