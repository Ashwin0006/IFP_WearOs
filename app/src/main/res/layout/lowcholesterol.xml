<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008B8B"> <!-- Change the background color to a light color -->

    <Spinner
        android:id="@+id/day_spinner"
        android:layout_width="89dp"
        android:layout_height="31dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background"
        android:prompt="@array/days_array"
        app:layout_constraintBottom_toTopOf="@+id/timing_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/timing_spinner"
        android:layout_width="95dp"
        android:layout_height="29dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:background="@drawable/spinner_background"
        android:prompt="@array/timing_array"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day_spinner" />

    <Button
        android:id="@+id/change"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/circular_button_bg"
        android:text="Change Plan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timing_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>
